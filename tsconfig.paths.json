{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@api": ["api"],

      "@assets/*": ["assets/*"],
      "@assets": ["assets"],

      "@components/*": ["components/*"],
      "@components": ["components"],

      "@core/*": ["core/*"],
      "@core": ["core"],

      "@pages/*": ["pages/*"],
      "@pages": ["pages"],

      "@utils/*": ["utils/*"],
      "@utils": ["utils"],

      "@common/*": ["common/*"],
      "@common": ["common"],

      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks"],

      "@context/*": ["context/*"],
      "@context": ["context"]
    }
  }
}
